[user]
	name = James Goode
	email = james@sodapopandco.com
[core]
	excludesfile = /Users/james/.gitignore_global
	editor = atom --wait
[alias]
	amend = commit -a --amend
	cm = !git add -A && git commit -m
	co = checkout
	cob = checkout -b
	com = !git checkout master && git pull --rebase
	halp = !git fetch origin && git reset --hard origin
	pom = pull origin master
	pr = pull --rebase
	prune = fetch --prune
	st = status -s
	sp = stash pop
	save = !git add -A && git commit -m "Save changes for later"
	up = !git pull --rebase --prune $@ && git submodule update --init --recursive
	undo = reset HEAD~1 --mixed
[push]
	default = simple
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
